<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="public/style.css">
  <title>Vcall</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-dark bg-primary ">
      <div class="container">
        <a class="navbar-brand" href="/">Vcall</a>
        <span>Zoom-Clone</span>
        <span class="text-white" id="userName"></span>
      </div>
    </nav>
  </header>
  <div class="container">
    <div class="py-2">
      <h1 class="title">Create new room</h1>
      <form action="/setup" method="POST" id="formCreate" onsubmit="createRoom()">
        <div class="d-flex">
          <input type="text" class="form-control" name="user" id="name" placeholder="User Name" />
          <button type="submit" class="btn btn-primary py-3">
            CREATE
          </button>
        </div>

      </form>
    </div>
    <div class="mt-5">
      <h1 class="title">Join to a room</h1>
      <form action="/setup" method="POST" id="form">
        <div class="d-flex">
          <input type="text" class="form-control" name="rid" id="rid" placeholder="Room Id" />
          <button type="submit" class="btn btn-primary py-3">
            JOIN
          </button>
        </div>

      </form>
    </div>

  </div>
  <script>
    $(document).ready(() => {
      const user = JSON.parse(localStorage.getItem("_vcallUser") || '{}')
      if (user.name) {
        $("#name").val(user.name)
        $("#userName").html(user.name)
      }
    })
    function createRoom() {
      let name = $("#name").val()
      localStorage.setItem("_vcallUser", JSON.stringify({ name }))
    }
  </script>
</body>

</html>