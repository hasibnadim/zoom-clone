                            <li><button onclick="editNickName()"
                                    class="btn btn-secondary d-block my-1 w-100 btn-sm">Edit Nickname</button></li>
                        </ul>
                    </div>
                    <div onclick="toggolChat()"
                        class="main-control-button d-flex flex-column justify-content-center align-items-center"
                        id="chatBtn">
                        <i class="fas fa-comment-alt "></i>
                        <span>Chat</span>
                    </div>

                </div>
                <div class="main-controls-block d-flex">
                    <div onclick="leave()"
                        class="main-control-button d-flex flex-column justify-content-center align-items-center">
                        <span class="leave-meeting">Leave Meeting</span>
                    </div>

                </div>
            </div>
        </div>
        <div class="main-right" id="chatBlock">
            <div class="main-header text-center text-white">
                <h6>Chat Box</h6>
            </div>
            <div class="main-chat-window flex-grow-1 text-white">
                <ul id="chatLog">

                </ul>
            </div>
            <div class="main-msg-container">
                <input id="msg" type="text" placeholder="Type message here...">
            </div>
        </div>
